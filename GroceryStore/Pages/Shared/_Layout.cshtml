<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GroceryStore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/holiday.css@0.9.8"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GroceryStore.styles.css" asp-append-version="true" />

    @RenderSection("CustomCSS", required: false)
</head>
<body>
    <header>
        <nav >
            <ul>
                <li>
                    @*Add a logo to the menu*@
                    <a asp-area="" asp-page="/Index">
                        <img src="~/img/ChinookMusicMenuLogo.jpg" alt="chinook logo" title="goto home"/>
                    </a>
                </li>
                @*drop down menu*@
                <li>
                    <span>Samples</span>
                    <ul>
                        <li>
                            <a asp-area="" asp-page="/SamplePages/Basics">Basics</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a asp-area="" asp-page="/Index">Home</a>
                </li>
                <li>
                    <a asp-area="" asp-page="/ProductsByCatergoryQuery">Query</a>
                </li>
                <li>
                    <a asp-area="" asp-page="/CRUDProductModel">Crud</a>
                </li>
                <li>
                    <a asp-area="" asp-page="/Privacy">Privacy</a>
                </li>
                <partial name="_LoginPartial" />
            </ul>        
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
            &copy; 2022 - GroceryStore - <a asp-area="" asp-page="/Privacy">Privacy</a>

    </footer>


    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>